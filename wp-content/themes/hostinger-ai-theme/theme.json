{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
            "defaultGradients": false,
			"palette": [
				{
					"slug": "color1",
					"color": "#E1D7C6",
					"name": "Color 1 (Section backgrounds)"
				},
                {
                  "slug": "color2",
                  "color": "#2C2A29",
                  "name": "Color 2 (Section backgrounds)"
                },
                {
                  "slug": "color3",
                  "color": "#5A504A",
                  "name": "Color 3 (Button background)"
                },
                {
                  "slug": "light",
                  "color": "#ffffff",
                  "name": "Light (Text on Color 2 and Gradient)"
                },
                {
                  "slug": "dark",
                  "color": "#0d141a",
                  "name": "Dark (Text on Light and Color 1)"
                },
                {
                  "slug": "grey",
                  "color": "#B8C0CC",
                  "name": "Grey (Form borders)"
                }
			],
			"gradients": [
				{
					"slug": "gradient-one",
					"gradient": "linear-gradient(135deg, #E1D7C6 0%, #D4A373 100%)",
					"name": "Section background gradient"
				}
			]
		},
		"layout": {
			"contentSize": "700px",
			"wideSize": "1100px"
		},
		"spacing": {
            "blockGap": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "12px",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium",
					"fluid": false
				},
				{
					"slug": "large",
					"size": "18px",
					"name": "Large",
					"fluid": false
				},
				{
					"slug": "x-large",
					"size": "38px",
					"name": "XL",
                    "fluid": false
				},
				{
					"slug": "xx-large",
					"size": "60px",
					"name": "XXL",
                    "fluid": false
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			}
		},
		"spacing": {
            "blockGap": "40px",
			"padding": {
				"right": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--system)",
			"lineHeight": "1.5"
		},
        "blocks": {
          "core/heading": {
            "typography": {
              "lineHeight": "1.2"
            }
          }
        }
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		}
	]
}
